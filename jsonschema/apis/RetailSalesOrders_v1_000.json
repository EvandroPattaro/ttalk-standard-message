							}
						}
					},
					"400": {
						"description": "Erro na consulta!",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModel"
								}
							}
						}
					}
				}
			}
		},
		"/retailSalesOrders/{internalId}/items": {
			"get": {
				"tags": ["RetailSalesOrders"],
				"summary": "Lista itens do pedido de venda do varejo",
				"description": "Exibe os detalhes dos itens do pedido de venda (SC6) para o pedido informado.",
				"operationId": "getRetailSalesOrderItems",
				"parameters": [
					{
						"name": "internalId",
						"in": "path",
						"description": "Chave interna do pedido (C5_FILIAL|C5_NUM)",
						"required": true,
						"schema": { "type": "string" }
					},
					{
						"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Authorization"
					}
				],
				"responses": {
					"200": {
						"description": "Operação realizada com sucesso",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"items": {
											"type": "array",
											"items": { "$ref": "../schemas/RetailSalesOrders_2_010.json#/definitions/RetailSalesOrderItemType" }
										},
										"hasNext": { "type": "boolean" }
									}
								}
							}
						}
					},
					"400": {
						"description": "Erro na consulta!",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModel"
