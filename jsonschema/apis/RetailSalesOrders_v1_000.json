	"paths": {
		"/retailSalesOrders": {
			"get": {
				"tags": ["RetailSalesOrders"],
				"summary": "Lista pedidos de venda do varejo",
				"description": "Lista todos os pedidos de venda do faturamento (SC5) relacionados ao varejo.",
				"operationId": "getRetailSalesOrders",
				"parameters": [
					{
						"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Authorization"
					}
				],
				"responses": {
					"200": {
						"description": "Operação realizada com sucesso",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"items": {
											"type": "array",
											"items": { "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/RetailSales_1_000.json#/definitions/RetailSalesOrderType" }
										},
										"hasNext": { "type": "boolean" }
